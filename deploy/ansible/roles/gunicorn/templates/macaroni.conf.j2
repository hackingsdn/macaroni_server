description "macaroni"

start on (filesystem)
stop on runlevel [016]

respawn
setuid macaroni
setgid macaroni
chdir /home/macaroni/macaroni_server/server/

# --workers INT : set 'workers' to the number of cores you have
exec gunicorn macaroni:app -b localhost:8000 --workers 1 --log-file /var/log/macaroni/gunicorn.log
